//* log activity
model Activity {
    id          String         @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    stage       StageEnum
    activity    ActivitiesEnum
    skill       String[]
    image       String?
    link        String?
    date        DateTime?
    status      ActivityEnum   @default(Pending)

    userId                  String?                 @db.ObjectId
    user                    User?                   @relation("ActivityCreator", fields: [userId], references: [id])
    createdAt               DateTime                @default(now())
    updatedAt               DateTime                @updatedAt
    userCompletedActivities UserCompletedActivity[]

    @@map("activity")
}

model UserCompletedActivity {
    id         String @id @default(auto()) @map("_id") @db.ObjectId
    userId     String @db.ObjectId
    activityId String @db.ObjectId

    isCompleted Boolean

    user     User     @relation("CompleteActivity", fields: [userId], references: [id])
    activity Activity @relation(fields: [activityId], references: [id])

    completedAt DateTime @default(now())

    @@map("userCompletedActivity")
}

enum StageEnum {
    Early
    Emerging
    Growing
}

enum ActivityEnum {
    Pending
    Complete
}

enum ActivitiesEnum {
    Communication
    Daily_Routines
    Calm_And_Explorer
    Move_and_Play
    Learning_and_skills
}

