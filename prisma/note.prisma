model ChildDocument {
    id    String  @id @default(auto()) @map("_id") @db.ObjectId
    image String?
    video String?
    pdf   String?
    files String?

    childId String   @db.ObjectId
    child   Children @relation(fields: [childId], references: [id], onDelete: Cascade)

    uploadedAt DateTime @default(now())

    @@map("child_documents")
}

// 2. Provider Information
model Provider {
    id        String         @id @default(auto()) @map("_id") @db.ObjectId
    fullName  String
    specialty SpecialtyEnum?
    phone     String?
    email     String?
    address   String?
    notes     String?

    childId String   @db.ObjectId
    child   Children @relation(fields: [childId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("providers")
}

enum SpecialtyEnum {
    Speech_therapist
    Occupational_therapist
    Pediatrician
    Teacher
    School_counselor
    Dentist
    Coordinator
    Baby_sitter
    Other
}

// 3. Health & Care Notes
model HealthCareNote {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String?
    note        NoteType?
    image       String?

    childId String   @db.ObjectId
    child   Children @relation(fields: [childId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("health_care_notes")
}

enum NoteType {
    Allergies
    Medications
    Dosages
    Emergency_instructions
    Illness_history
    Care_routines
}

// 4. Preferences & Sensory Notes
model PreferenceSensoryNote {
    id          String              @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String?
    helps       String?
    avoid       String?
    image       String?
    category    SensoryCategoryEnum?

    childId String   @db.ObjectId
    child   Children @relation(fields: [childId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("preference_sensory_notes")
}

enum SensoryCategoryEnum {
    Sensory_sensitivities
    Safe_Favorite_foods
    Favorite_objects_or_comfort_tools
    Noise_light_sensitivities
    Triggers
    Likes_and_Dislikes
    Calming_techniques
}
